{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["es6", "esnext", "es2015"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "removeComments": true,
    "rootDir": "src",
    "strict": true,
    "target": "es6"
  },
  "exclude": ["/node_modules", "src/**/*.test.ts"],
  "include": ["src/**/*.ts"]
}
